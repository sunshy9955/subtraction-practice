        // éšæœºé€‰æ‹©ä¸€å¥è¯
        function getRandomMessage(messages) {
            return messages[Math.floor(Math.random() * messages.length)];
        }

        // ç”Ÿæˆä¸€ä¸ª20ä»¥å†…çš„é€€ä½å‡æ³•é¢˜ç›®
        function generateProblem() {
            const a = Math.floor(Math.random() * 11) + 10; // 10åˆ°20ä¹‹é—´çš„æ•°
            const b = Math.floor(Math.random() * 9) + 1;   // 1åˆ°9ä¹‹é—´çš„æ•°
            return { a, b };
        }

        // æ£€æŸ¥ç­”æ¡ˆæ˜¯å¦æ­£ç¡®
        function checkAnswer() {
            const userAnswer = parseInt(document.getElementById('answer').value);
            if (isNaN(userAnswer)) {
                document.getElementById('result').innerText = "è¯·è¾“å…¥æœ‰æ•ˆçš„æ•°å­—ï¼";
                return;
            }

            const correctAnswer = currentProblem.a - currentProblem.b;
            const resultDiv = document.getElementById('result');

            if (userAnswer === correctAnswer) {
                resultDiv.innerHTML = `æ­£ç¡®ï¼${getRandomMessage(praiseMessages)} <span class="star">â­</span>`;
            } else {
                resultDiv.innerHTML = `é”™è¯¯ï¼Œæ­£ç¡®ç­”æ¡ˆæ˜¯ ${correctAnswer}ã€‚${getRandomMessage(encourageMessages)} <span class="encourage">ğŸ˜Š</span>`;
            }

            // ç”Ÿæˆä¸‹ä¸€é¢˜
            currentProblem = generateProblem();
            document.getElementById('problem').innerText = `${currentProblem.a} - ${currentProblem.b} = ?`;
            document.getElementById('answer').value = ''; // æ¸…ç©ºè¾“å…¥æ¡†
